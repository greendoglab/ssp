.container
    width 920px
    margin auto

.site-logo
    width 254px
    height 90px
    background url(../images/logo.jpg) no-repeat
    position absolute
    top -15px
    left 0

.site-header
    padding 32px 0 34px 0
    > .container
        position relative
    .gray_decor
        background #e0e0df
    nav
        text-align right
    ul
        margin 0
        padding 0
        li
            inline_middle()
    .social
        padding-right 40px
        img
            max-width 16px
            max-height 16px
    .site-nav
        a
            inline_middle()
            margin-left 20px
            color #5a5f61
            text-decoration none
            &:hover
                text-decoration underline

.site-showcase
    height 196px
    text-align center
    display table
    .sc-block
        display table-cell
        vertical-align middle
        .box
            height 196px
            overflow hidden
            position relative
            img
                max-width 100%
            .links
                position absolute
                &.left
                    bottom 5px
                    right 49px
                    text-align right
                &.right
                    bottom 5px
                    left 5px
                    text-align left
                .link_box
                    display block
                    margin-top 6px
                    a
                        display inline-block
                        padding .2em .4em
        &.playback
            .box
                width 350px
                margin-left -40px
                .playback_decor
                    position absolute
                    top 50%
                    left 50%
                    width 42px
                    height 42px
                    margin -21px 0 0 -21px
                    background url(../images/play.png) no-repeat

.site-content
    padding-top 30px
    .container
        &.single
            width 840px
        .search_travel_openings
            width 330px
            margin-left 126px
            float left
            .gray_title
                clear both
            .links
                width 98px
                float left
                .blue_link
                    display block
                    width 44px
                    text-align center
                    font-size .9em
                    line-height 1
                    padding 6px 0
                    margin-bottom 6px
                    &:nth-child(odd)
                        float left
                    &:nth-child(even)
                        float right
                .green_link
                    text-align center
                    display block
                    clear both
                    width 98px
                    font-size .75em
                    line-height 1.4
                    padding 4px 0
            .earch_by_state
                display block
                float left
                width 148px
                height 136px
                margin-left 50px
                background url(../images/usa_mini_map.png) no-repeat center center
                text-align center
                text-decoration none
                span
                    display inline-block
                    margin-top 55px
                    color #fff
                    line-height 1.4
                    font-size .75em
                    margin-left -10px
            .get_mail
                float right
                width 100%
                margin-top 30px
                position relative
                .inputs
                    overflow hidden
                    input
                        float right
                        &[type=text]
                            width 210px
                            border 1px solid #d4dcde
                            padding 0.4em 0em 0.3em 3px
                        &[type=submit]
                            border none
                            font-size .9em
                a
                    display inline-block
                    float right
                    width 278px
                    text-align center
                    margin-top 6px
                    padding 0
                    font-size .9em
                &:before
                    content url(../images/be_first.png)
                    position absolute
                    top -20px
                    left -134px
        .featured_assignment
            width 350px
            margin-left 60px
            float left
            .gray_title
                clear both
            .block-product
                width 100%
                box-shadow 0 0 2px 2px rgba(232,235,236,1)
                margin-bottom 2px
                .box
                    height 75px
                    overflow hidden
                    margin-bottom 16px
                    img
                        max-width 100%
                .text_box
                    overflow hidden
                    box-sizing border-box
                    padding 10px
                    .description
                    .apply_links
                        width 50%
                        float left
                    .description
                        line-height 1.2
                        h4
                        p
                            margin 0
                        h4
                            font-size .85em
                            margin-bottom 8px
                        p
                            font-size .75em
                    .apply_links
                        span.link_box
                            display block
                            text-align center
                            &:nth-child(1)
                                margin-bottom .3em
                            a
                                display inline-block
                                width 100px
                                padding .1em

.site-footer
    background #8dc640
    overflow hidden
    color #fff
    margin-top 2em
    ul
        margin 0
        padding 0
        li
            list-style none
    a
        color #fff
        text-decoration none
    .footer-block
        float left
        width 25%
        .foot-text
            font-size 0.78em
            line-height 1.4
        &.seal
            img
                max-width 55%
                margin-top .8em

.single-content
    // padding-left 40px
    padding-right 90px
    p
        margin-bottom 2em
    .links
        a
            padding 0.2em 0.3em
            font-size .95em

.sidebar
    width 180px
    .sidebar_block
        box-sizing border-box
        padding .7em
        position relative
        &:before
            position absolute
            top 0
            left 0
        margin-bottom 2em
        font-size .8em
        line-height 1.4
        &.blue
            background #00b1af
            color #fff
        &.gray
            background #e0e0df
        &.icon-important
            &:before
                content url(../images/s-icon-important.png)
        &.icon-comment
            p
                text-align center
            &:before
                content url(../images/s-icon-comments.png)
        &.icon-mail
            text-align center
            position relative
            padding-bottom 50px
            padding-top .8em
            .sign_up
                margin-top .8em
                text-align right
                position absolute
                bottom 5px
                right 7px
                .green_link
                    padding .2em .4em
            input
                border none
                padding .3em
                box-sizing border-box
                position absolute
                left 2px
                width 176px
            &:before
                content url(../images/s-icon-mail.png)

@-moz-document url-prefix() {
    .site-showcase .sc-block .box img {
        width: 100%;
    }
    .site-header .site-nav a {
        font-size: .8em;
    }
    .site-content .container .search_travel_openings .get_mail .inputs input[type="text"] {
        width: 205px;
        border: 1px solid rgb(212, 220, 222);
        padding: 0.2em 0px 0.2em 3px;
        margin-right: 2px;
    }
}